# UltraRAG MCP Authentication Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (matching Strapi)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi
DATABASE_SSL=false
DATABASE_SCHEMA=public

# JWT Configuration (must match Strapi JWT_SECRET)
JWT_SECRET=your-jwt-secret-here

# Strapi Configuration
STRAPI_BASE_URL=http://localhost:1337
INTERNAL_TOKEN=your-internal-token-here

# API Key Configuration
API_KEY_HEADER_NAME=X-API-Key

# Development Credentials (for testing only)
DEV_API_KEY=dev-api-key-12345
DEV_USER_ID=dev-user
DEV_ROLE=super_admin
DEV_ORG_ID=dev-org
DEV_SCOPES=read,write,admin

# Security Settings
REQUIRE_HTTPS=false
TOKEN_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_AUTH_ATTEMPTS=true

# MCP Authentication Headers (for testing)
MCP_AUTH_HEADER=
MCP_API_KEY=
